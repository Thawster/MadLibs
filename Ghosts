print ("Welcome to madlibs!")
verb1 = input("Enter a past-tense verb: ")
if verb1 == "":
    verb1 = "crackled"
verb2 = input("Enter a past-tense verb: ")
if verb2 == "":
    verb2 = "popped"
adj1 = input("Enter an adjective ")
if adj1 == "":
    adj1 = "dim"
noun1 = input("Enter a noun ")
if noun1 == "":
    noun1 = "teller"
adj2 = input("Enter an adjective ")
if adj2 == "":
    adj2 = "mystery"
pro1 = input("Enter a pronoun ")
if pro1 == "":
    pro1 = "Mr"
prop1 = input("Enter a proper noun ")
if prop1 == "":
    prop1 = "Gustaf"
con1 = input("Enter a conjuction ")
if con1 == "":
    con1 = "or"
pro2 = input("Enter a pronoun ")
if pro2 == "":
    pro2 = "Mrs"
prop2 = input("Enter a proper noun ")
if prop2 == "":
    prop2 = "Hemsworth"
adj3 = input("Enter an adjective ")
if adj3 == "":
    adj3 = "grim"
noun2 = input("Enter a noun ")
if noun2 == "":
    noun2 = "Slasher"
print ("The campfire "+ verb1 +" and "+ verb2 +" in the "+ adj1 +" twilight. The "+ noun1 +"'s voice carried an air of "+ adj2 +" as the story unfolded. No one knew if "+ pro1 +"."+ prop1 +" "+ con1 +" "+ pro2 +"."+ prop2 +" had done the crime. Everyone held their breath as the final chapter of the "+ adj3 +" attack of the "+ noun2 +" was finished.")
